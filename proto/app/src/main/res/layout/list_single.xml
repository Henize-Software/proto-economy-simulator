<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/traderIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:maxHeight="64dp"
                android:maxWidth="64dp"
                android:minHeight="64dp"
                android:minWidth="64dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/master" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:textAlignment="viewStart">

            <TextView
                android:id="@+id/textTraderType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="5dp"
                android:text="Trader Type"
                android:textAlignment="inherit"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textComVal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Units For Sale: 0"
                android:textAlignment="inherit"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textUnitsSold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Units Sold: 0"
                android:textAlignment="inherit"
                android:textAllCaps="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:textAlignment="viewEnd">

            <TextView
                android:id="@+id/textBankBal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bank $0.00"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/textPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textAlignment="inherit"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textDebt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Debt"
                android:textAlignment="inherit" />

            <TextView
                android:id="@+id/textIsWaiting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Is Waiting or Traveling: "
                android:textAlignment="viewEnd"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/textTraderID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trader ID"
                android:textAlignment="viewEnd"
                android:textAllCaps="false" />

        </LinearLayout>

    </TableRow>

</TableLayout>