                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal"
                android:selectAllOnFocus="true"
                android:text="0.01" />

            <ToggleButton
                android:id="@+id/tbt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4c59e3ff"
                android:text="ToggleButton"
                android:textOff="START BUYING TOOLS"
                android:textOn="STOP BUYING TOOLS" />

